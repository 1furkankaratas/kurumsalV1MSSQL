@model SocialMediaViewModel
@{
    ViewData["Title"] = "Ekle - Sosyal Medya Hesabı";
    Layout = "~/Views/Shared/_ManagementPanelLayout.cshtml";
}



<form method="post" enctype="multipart/form-data" asp-controller="ManagementPanel" asp-action="AddSocialAccounts">

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header"><strong>Ekle</strong> Sosyal Medya Hesabı</div>
                <div class="card-body">
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label" for="text-input">Hesap Tipi</label>
                        <div class="col-md-9">
                            <input class="form-control" id="text-input" asp-for="Type">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label" for="text-input">Hesap Adresi</label>
                        <div class="col-md-9">
                            <input class="form-control" id="text-input" asp-for="Link">
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button class="btn btn-sm btn-primary" type="submit"> Kaydet</button>
                    <button class="btn btn-sm btn-danger" type="reset"> Sıfırla</button>
                </div>
            </div>
        </div>


    </div>

</form>