@model CategoryImageUploadViewModel
@{
    ViewData["Title"] = "Güncelle - Kategori";
    Layout = "~/Views/Shared/_ManagementPanelLayout.cshtml";
}


<form method="post" asp-controller="ManagementPanel" asp-action="UpdateGalleryCategory">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header"><strong>Güncelle</strong> Kategori</div>
                <div class="card-body">
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label" for="text-input">Kategori Adı</label>
                        <div class="col-md-9">
                            <input class="form-control" id="text-input" asp-for="Name">
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button class="btn btn-sm btn-primary" type="submit"> Güncelle</button>
                    <button class="btn btn-sm btn-danger" type="reset"> Sıfırla</button>
                </div>
            </div>
        </div>


    </div>

</form>